{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "craft",
  "title": "Craft",
  "description": "Craft.do integration with API & MCP.",
  "icon": "extension-icon.png",
  "author": "slavarazum",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Productivity",
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-documents",
      "title": "Search Documents",
      "description": "Search documents globally",
      "mode": "view"
    },
    {
      "name": "add-to-daily-note",
      "title": "Add to Daily Note",
      "description": "Add content to your daily note",
      "mode": "view"
    },
    {
      "name": "show-daily-notes",
      "title": "Show Daily Notes",
      "description": "Browse your daily notes",
      "mode": "view"
    },
    {
      "name": "show-tasks",
      "title": "Show Tasks",
      "description": "Manage and interact with tasks",
      "mode": "view"
    },
    {
      "name": "show-upcoming-tasks",
      "title": "Show Upcoming Tasks",
      "description": "View upcoming tasks",
      "mode": "view"
    },
    {
      "name": "show-inbox-tasks",
      "title": "Show Inbox Tasks",
      "description": "View inbox tasks",
      "mode": "view"
    },
    {
      "name": "show-logbook-tasks",
      "title": "Show Logbook Tasks",
      "description": "View completed and canceled tasks",
      "mode": "view"
    },
    {
      "name": "show-today-tasks",
      "title": "Show Today Tasks",
      "description": "View active tasks grouped by location",
      "mode": "view"
    },
    {
      "name": "add-task",
      "title": "Add New Task",
      "description": "Quickly add a new task to Craft",
      "mode": "view",
      "arguments": [
        {
          "name": "task",
          "placeholder": "Task",
          "type": "text",
          "required": false
        },
        {
          "name": "schedule",
          "placeholder": "Schedule (today, tomorrow, 2024-12-25)",
          "type": "text",
          "required": false
        },
        {
          "name": "deadline",
          "placeholder": "Deadline (today, tomorrow, 2024-12-25)",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "tools": [
    {
      "name": "search-documents",
      "title": "Search Documents",
      "description": "Interact with documents"
    },
    {
      "name": "search-blocks",
      "title": "Search Blocks",
      "description": "Search content within blocks. Can search across all documents or within a specific document. Supports plain text and regex patterns. Returns matching blocks with context."
    },
    {
      "name": "use-tasks",
      "title": "Use Tasks",
      "description": "Manage and interact with"
    }
  ],
  "preferences": [
    {
      "name": "documentsApiUrl",
      "title": "Documents API URL",
      "description": "Your Craft Documents API URL. Get it from Craft Settings > API Access.",
      "type": "textfield",
      "required": true,
      "placeholder": "https://connect.craft.do/links/YOUR_LINK_ID/api/v1"
    },
    {
      "name": "dailyNotesAndTasksApiUrl",
      "title": "Daily Notes & Tasks API URL",
      "description": "Your Craft Daily Notes & Tasks API URL. Get it from Craft Settings > API Access.",
      "type": "textfield",
      "required": true,
      "placeholder": "https://connect.craft.do/links/YOUR_LINK_ID/api/v1"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "react-devtools": "^6.1.1",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
