{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "color-casket",
  "title": "Color Casket",
  "description": "Handy Color Utilities",
  "icon": "command-icon.png",
  "author": "slavarazum",
  "contributors": [
    "fe9lix",
    "pernielsentikaer",
    "fengtianze"
  ],
  "categories": [
    "Design Tools",
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Render Color",
      "description": "Render color by string representation",
      "keywords": [
        "color",
        "render",
        "render color",
        "color utilities",
        "color casket"
      ],
      "mode": "view"
    },
    {
      "name": "picker",
      "title": "Pick Color",
      "description": "Pick color from everywhere",
      "icon": "picker-icon.png",
      "keywords": [
        "color",
        "pick",
        "eyedropper",
        "dropper",
        "pipette",
        "color casket"
      ],
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "data": [
        {
          "title": "HEX",
          "value": "HEX"
        },
        {
          "title": "RGB",
          "value": "RGB"
        },
        {
          "title": "HSL",
          "value": "HSL"
        },
        {
          "title": "Keyword",
          "value": "Keyword"
        }
      ],
      "default": "HEX",
      "description": "Default format for color picker",
      "name": "format",
      "required": false,
      "title": "Default Format",
      "type": "dropdown"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.2",
    "color-convert": "^2.0.1",
    "is-valid-css-color": "^2.0.3",
    "javascript-time-ago": "^2.3.13",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/color-convert": "^2.0.0",
    "@types/node": "^18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
